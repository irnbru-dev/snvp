mixin main-promo()
  section.main-promo
    div.container
      div.main-promo__phone-box
        p.main-promo__phone +7 812
          span  927 36 66
        p.main-promo__phone +7 495
          span  233 72 24
      div.row
        h1.main-promo__title.col-md-6.col-md-offset-3 Катера и суда на воздушной подушке
      div.row
        p.main-promo__more.col-md-4.col-md-offset-4 Хотите узнать больше?
      div.row
        ul.main-promo__list.col-md-8.col-md-offset-2
            li.main-promo__item
              a.main-promo__link(href='#')
                div.main-promo__img-box
                  img.main-promo__img(src='/img/index/promo-item-1.svg')
                p.main-promo__link-txt Пройдите тест-драйв
            li.main-promo__item
              a.main-promo__link(href='#')
                div.main-promo__img-box
                  img.main-promo__img(src='/img/index/promo-item-2.svg')
                p.main-promo__link-txt Скачайте презентацию
            li.main-promo__item
              a.main-promo__link(href='#')
                div.main-promo__img-box
                  img.main-promo__img(src='/img/index/promo-item-3.svg')
                p.main-promo__link-txt Посмотрите видео
            li.main-promo__item
              a.main-promo__link(href='#')
                div.main-promo__img-box
                  img.main-promo__img(src='/img/index/promo-item-4.svg')
                p.main-promo__link-txt Найдите дилера
      block
